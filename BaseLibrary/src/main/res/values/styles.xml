<resources>
    <!-- 加载弹框样式 -->
    <style name="LightProgressDialog" parent="@style/LightDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="LightDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan
        </item>
    </style>
    <!-- 照相机 -->
    <style name="picturestyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--标题栏背景色-->
        <item name="colorPrimary">@color/mainColor</item>
        <!--状态栏背景色-->
        <item name="colorPrimaryDark">@color/mainColor</item>
        <!--是否改变图片列表界面状态栏字体颜色为黑色-->
        <item name="picture.statusFontColor">false</item>
        <!--返回键图标-->
        <item name="picture.leftBack.icon">@drawable/back_black_icon</item>
        <!--标题下拉箭头-->
        <item name="picture.arrow_down.icon">@drawable/tag_close_icon</item>
        <!--标题上拉箭头-->
        <item name="picture.arrow_up.icon">@drawable/tag_open_icon</item>
        <!--标题文字颜色-->
        <item name="picture.title.textColor">@color/color_333333</item>
        <!--标题栏右边文字-->
        <item name="picture.right.textColor">@color/color_333333</item>
        <!--图片列表勾选样式-->
        <item name="picture.checked.style">@drawable/picture_checkbox_selector</item>
        <!--开启图片列表勾选数字模式-->
        <item name="picture.style.checkNumMode">false</item>
        <!--选择图片样式0/9-->
        <item name="picture.style.numComplete">false</item>
        <!--图片列表底部背景色-->
        <item name="picture.bottom.bg">@color/mainColor</item>
        <!--图片列表预览文字颜色-->
        <item name="picture.preview.textColor">@color/color_333333</item>
        <!--图片列表已完成文字颜色-->
        <item name="picture.complete.textColor">@color/color_333333</item>
        <!--图片已选数量圆点背景色-->
        <item name="picture.num.style">@drawable/num_oval</item>
        <!--预览界面标题文字颜色-->
        <item name="picture.ac_preview.title.textColor">@color/color_333333</item>
        <!--预览界面已完成文字颜色-->
        <item name="picture.ac_preview.complete.textColor">@color/color_333333</item>
        <!--预览界面标题栏背景色-->
        <item name="picture.ac_preview.title.bg">@color/mainColor</item>
        <!--预览界面底部背景色-->
        <item name="picture.ac_preview.bottom.bg">@color/mainColor</item>
        <!--预览界面状态栏颜色-->
        <item name="picture.status.color">@color/mainColor</item>
        <!--预览界面返回箭头-->
        <item name="picture.preview.leftBack.icon">@drawable/back_black_icon</item>
        <!--是否改变预览界面状态栏字体颜色为黑色-->
        <!--裁剪页面标题背景色-->
        <item name="picture.crop.toolbar.bg">@color/mainColor</item>
        <!--裁剪页面状态栏颜色-->
        <item name="picture.crop.status.color">@color/mainColor</item>
        <!--裁剪页面标题文字颜色-->
        <item name="picture.crop.title.color">@color/color_333333</item>
        <!--相册文件夹列表选中图标-->
        <item name="picture.folder_checked_dot">@drawable/orange_oval</item>
    </style>

        <!--顶部toast-->
    <style name="top_int_out_toast_style" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/toast_down</item>
        <item name="android:windowExitAnimation">@anim/toast_up</item>
    </style>
    <style name="login_Et">
        <item name="android:layout_height">@dimen/px60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColorHint">@color/color_afafaf</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/px30dp</item>
        <item name="android:background">@null</item>
    </style>
</resources>
