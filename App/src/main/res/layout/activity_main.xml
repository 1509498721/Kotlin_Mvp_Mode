<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/mainColor"
        android:clipChildren="false"
        tools:context="com.whz.main.ui.activity.MainActivity">
    <FrameLayout
            android:id="@+id/fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"/>

    <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp"
            android:background="@color/white"
            android:orientation="horizontal">

        <RadioButton
                android:id="@+id/rbHome"
                style="@style/main_activity_tab_style"
                android:checked="true"
                android:drawableTop="@drawable/selector_main_activity_tab_home"
                android:text="@string/home"/>

        <RadioButton
                android:id="@+id/rbExploration"
                style="@style/main_activity_tab_style"
                android:drawableTop="@drawable/selector_main_activity_tab_exploration"
                android:text="@string/exploration"/>
        <RadioButton
                android:id="@+id/rbPurchasing"
                style="@style/main_activity_tab_style"
                android:layout_height="@dimen/px126dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:checked="false"
                android:drawableTop="@drawable/selector_main_activity_tab_message"
                android:text="@string/my_buy"/>

        <RadioButton
                android:id="@+id/rbCart"
                style="@style/main_activity_tab_style"
                android:checked="false"
                android:drawableTop="@drawable/selector_main_activity_tab_cart"
                android:text="@string/cart"/>

        <RadioButton
                android:id="@+id/rbStandingList"
                style="@style/main_activity_tab_style"
                android:checked="false"
                android:drawableTop="@drawable/selector_main_activity_tab_menulist"
                android:text="@string/my_business"/>
    </RadioGroup>
</LinearLayout>
