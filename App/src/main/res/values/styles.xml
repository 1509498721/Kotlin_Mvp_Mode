<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorPrimaryDark">@color/mainColor</item>
        <item name="colorAccent">@color/mainColor</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!--首页底部导航栏-->
    <style name="main_activity_tab_style">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/px10dp</item>
        <item name="android:paddingBottom">@dimen/px4dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/px20dp</item>
        <item name="android:textColor">@drawable/selector_main_activity_tab_text_color</item>
    </style>
    <!--启动页面but-->
    <style name="guide_button">
        <item name="android:background">@drawable/draw_00000000</item>
        <item name="android:layout_height">@dimen/px88dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/px28dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">@dimen/px30dp</item>
        <item name="android:layout_marginRight">@dimen/px30dp</item>
    </style>
</resources>
