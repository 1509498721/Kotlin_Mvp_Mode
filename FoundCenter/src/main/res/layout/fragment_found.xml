<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".ui.fragment.FoundFragment">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px88dp"
            android:background="@color/mainColor">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/exploration"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/px36dp"/>
    </RelativeLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/ref_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_fcfcfc">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                    android:id="@+id/foundRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_fcfcfc">
            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>